{
  "compilerOptions": {
    // ECMAScript version supported by Node v16
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "./.aws-sam/build",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
