{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {},
    "test": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "prebuild": {
      "dependsOn": ["^prebuild"]
    },
    "build": {
      "dependsOn": ["prebuild", "^build"]
    },
    "deploy-dev": {
      "dependsOn": ["^deploy-dev"]
    },
    "deploy": {
      "dependsOn": ["deploy-dev", "deploy-prod", "^deploy"]
    }
  }
}
