{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "types": [
      "node"
    ],
    "paths": {
      "routes/*": [
        "./src/routes/*"
      ],
      "schemas/*": [
        "./src/schemas/*"
      ],
      "~/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  }
}